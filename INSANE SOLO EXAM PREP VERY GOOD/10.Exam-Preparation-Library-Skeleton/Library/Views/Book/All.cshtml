@model ICollection<BookViewModel>

@{
    ViewBag.Title = "All Books";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var book in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@book.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@book.Title</h5>
                <p class="mb-0">Author: @book.Author</p>
                <p class="mb-0">Rating: @book.Rating</p>
                <p >Category: @book.Category</p>
            </div>

            <form class="input-group-sm" asp-controller="Book" asp-action="AddToCollection" asp-route-id="@book.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            

            <a href="/Book/Edit/@book.Id" class="fs-6 btn btn-warning mb-3 p-2">Edit</a>

            @*

            twa ne raboti, shot twa view iska ICollection<BookViewModel>, a az mu podavam AddBookViewModel

            <form class="input-group-sm" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">
                <input type="submit" value="Edit" class="fs-6 btn btn-warning mb-3 p-2" />
            </form>

            *@

            <form class="input-group-sm" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">
                <input type="submit" value="DELETE" class="fs-6 btn btn-danger mb-3 p-2" />
            </form>
            

        </div>
    }
    
    @if (Model.Count == 0)
    {
        <p class="text-center text-warning h3">No books found.</p>
    }
</div>
